{% extends 'base.html.twig' %}

{% block title %}sewai | Log in
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="flex items-center justify-center h-[726px] bg-gray-100">
			<div class="w-[500px] bg-gray-200 rounded-[30px] py-14">
				{% if error %}
					<div class="alert alert-danger font-medium bg-red-300 text-red-500 text-center mb-4 rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<form method="post">
					<div class="form-group mx-14">
						<h2 class="text-center text-4xl font-semibold mb-7">Welcome back!</h2>
						<label for="inputEmail" class="block mb-2 text-xl font-semibold text-gray-900">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="text-gray-900 text-lg rounded-[30px] block w-full p-2 mb-10" autocomplete="email" required autofocus>
					</div>
					<div class="form-group mx-14">
						<label for="inputPassword" class="block mb-2 text-xl font-semibold text-gray-900">Password</label>
						<input type="password" name="password" id="inputPassword" class="text-gray-900 text-lg rounded-[30px] block w-full p-2 mb-10" autocomplete="current-password" required>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="flex flex-col justify-center items-center">
						<p class="mb-5">Don't have an account yet?
							<a href="{{ path('signup') }}" class="font-semibold text-teal-500 hover:text-teal-600">Sign up here!</a>

						</p>
						<button type="submit" class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-lg font-semibold text-gray-900 rounded-[30px] group bg-gradient-to-br from-teal-300 to-lime-300 group-hover:from-teal-300 group-hover:to-lime-300 dark:text-white dark:hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-lime-200">
							<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-[30px] group-hover:bg-opacity-0">
								Log in
							</span>
						</button>
					</div>
				</form>
			</div>

		</div>


	{% endblock %}

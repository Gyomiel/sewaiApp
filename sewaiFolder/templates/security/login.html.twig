{% extends 'base.html.twig' %}

{% block title %}sewai | Log in
{% endblock %}

{% block body %}
	<form method="post">
		<div class="flex items-center justify-center h-[750px]">
			<div class="w-[500px] bg-slate-300 rounded-[30px] py-9">
				{% if error %}
					<div class="flex items-center justify-center p-4 mb-4 text-lg text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 w-full" role="alert">
						<svg class="w-4 h-4 mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<div class="text-center ml-2">
							<span class="font-lg">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
						</div>
					</div>
				{% endif %}

				<form method="post">
					<div class="form-group mx-14">
						<h2 class="text-center text-4xl font-semibold mt-3 mb-10">Welcome back to sew<span class="text-white">ai</span>!</h2>

						<div class="relative">
							<div class="absolute inset-y-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="#FFFFFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" class="ml-[12px] h-6 w-6">
									<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/>
								</svg>
							</div>
							<input type="email" value="{{ last_username }}" name="email" placeholder="Email" id="inputEmail" class="text-gray-900 text-lg rounded-[30px] block p-2 w-full pl-14 pr-4 mb-10 h-12 leading-12" autocomplete="email" required autofocus/>
						</div>

						<div class="relative">
							<div class="absolute inset-y-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
								<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="#FFFFFF" class="ml-[12px] h-6 w-6">
									<path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd"/>
								</svg>
							</div>
							<input type="password" name="password" placeholder="Password" id="inputPassword" class="text-gray-900 text-lg rounded-[30px] block w-full p-2 pl-14 mb-5 h-12 leading-12" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>

					<div class="flex flex-col justify-center items-center">
						<a href="#" class="self-end mr-16 mb-7 font-semibold text-[#5E66A6] hover:text-[#3F446F]">Forgot your password?</a>

						<button type="submit" class="w-40 relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-[30px] group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
							<span class="w-40 relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-[30px] group-hover:bg-opacity-0 text-xl font-semibold">
								Log in
							</span>
						</button>
						<div class="text-black flex items-center justify-center space-x-4 mt-2 mb-3">
							<svg xmlns="http://www.w3.org/2000/svg" width="228" height="2" viewbox="0 0 228 2">
								<rect width="228" height="2" fill="#616161"/>
							</svg>
							<span class="text-black font-semibold">or</span>
							<svg xmlns="http://www.w3.org/2000/svg" width="228" height="2" viewbox="0 0 228 2">
								<rect width="228" height="2" fill="#616161"/>
							</svg>
						</div>

						<div class="flex flex-row justify-center items-center w-[100%] mb-5">
							<button type="button" class="text-white bg-[#4285F4] hover:bg-[#4285F4]/90 focus:ring-4 focus:outline-none focus:ring-[#4285F4]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#4285F4]/55 me-2 mb-2">
								<svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 18 19">
									<path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
								</svg>
								Google
							</button>
							<button type="button" class="text-white bg-[#050708] hover:bg-[#050708]/90 focus:ring-4 focus:outline-none focus:ring-[#050708]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#050708]/50 dark:hover:bg-[#050708]/30 me-2 mb-2">
								<svg class="w-5 h-5 me-2 -ms-1" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="apple" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 384 512">
									<path fill="currentColor" d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-164.2c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"></path>
								</svg>
								Apple
							</button>
						</div>
						<p class="mb-5">Don't have an account yet?
							<a href="{{ path('signup') }}" class="mt-3 text-center font-semibold text-[#b778f1] hover:text-[#9233ea]">Sign up here!</a>
						</p>
					</div>
				</form>
			</div>

		</div>


	{% endblock %}

{% macro course_card(course) %}
	<a href="{{ path('dashboard', {'course_id': course.id}) }}" class="flex flex-col items-center bg-white rounded-[30px] shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 w-full max-w-[450px]">
		<img class="object-cover w-full h-28" src="{{ course.profilePic | default('imgs/courseDefaultPfp.png') }}">
		<div class="flex flex-col justify-between p-4 leading-normal">
			<h5 class="mb-2 text-2xl text-center font-bold tracking-tight text-gray-900 dark:text-white">{{ course.title }}</h5>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ course.description }}</p>
		</div>
	</a>
{% endmacro %}

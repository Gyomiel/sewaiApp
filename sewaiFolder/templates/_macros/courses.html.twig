{% macro course_card(course) %}
	<a href="{{ path('dashboard', {'course_id': course.id}) }}" class="flex flex-col items-center overflow-hidden bg-[#1F2237] rounded-[30px] shadow-xl hover:bg-[#0F111B] w-full max-w-[450px]">
		<img class="object-cover w-full h-28" src="{{ course.profilePic | default('imgs/journeyDefaultPfp.png') }}">
		<div class="flex flex-col justify-between p-4 leading-normal">
			<h5 class="mb-2 text-2xl text-center font-bold tracking-tight text-gray-900 dark:text-white">{{ course.title }}</h5>
			<p class="mb-3 font-normal text-slate-400">{{ course.shortDesc }}</p>
		</div>
	</a>
{% endmacro %}

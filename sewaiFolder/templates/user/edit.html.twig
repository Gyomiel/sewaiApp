{% extends 'base.html.twig' %}

{% block title %}sewai | Edit profile
{% endblock %}

{% block body %}
	<div class="wasili">
	{% block sidebar %}
		<div class="profile-sidebar-container flex flex-col w-72">
			<div class="px-3 py-5 flex justify-center items-center gap-4 border-b-4 border-[#BFC5FC] bg-[#F2F3FE]">
				<img class="w-16 h-16 rounded-full" src="{{ app.user.profilePic | default('imgs/userDefaultPfp.png') }}" alt="Profile Picture">
				<div class="font-medium text-black">
					<div class="text-xl font-semibold text-black">{{ app.user.username }}</div>
					<div class="text-lg text-slate-600 flex items-center gap-2">
						<span>{{ app.user.email }}</span>
					</div>
				</div>
			</div>

			<div id="default-sidebar" class="z-40 w-72 h-[642px] bg-[#D8DCFD]" aria-label="Sidebar">
				<div class="h-full px-3 py-4 ml-2 mr-2">
					<ul class="space-y-2 font-medium">
						<li>
							<div class="flex items-center p-2 text-slate-800 rounded-lg">
								<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
								</svg>
								<span class="ms-3">Streak:
							{{ app.user.streakCount is not null ? app.user.streakCount ~ ' days!' : 'Start today!' }}</span>
							</div>
						</li>
						<li>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">Edit profile</span>
							</a>
						</li>
						<li>
							<a href="#" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">My journeys</span>
							</a>
						</li>
						<li>
							<a href="#" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">My sessions</span>
							</a>
						</li>
						<li>
							<a href="{{ path('aiChatbox') }}" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white">
									<path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">sewAI Chat</span>
							</a>
						</li>
						<li>
							<a href="#" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">Notifications</span>
								<span class="inline-flex items-center justify-center w-3 h-3 p-3 ms-3 text-sm font-semibold text-white bg-[#AD49E1] rounded-full">1</span>
							</a>
						</li>
						<li>
							<a href="#" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
								<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/>
								</svg>
								<span class="flex-1 ms-3 whitespace-nowrap">Community</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

	{% endblock %}

		<div class="flex items-center justify-center h-[750px]">
			<div class="w-[500px] bg-slate-300 rounded-[30px] py-10">
				{{ form_start(form) }}

				<h2 class="text-center text-4xl font-semibold mb-7">Edit your profile</h2>

				<div class="w-[500px] bg-slate-300 rounded-[30px]">
					<div class="form-group mx-14 mb-6 relative">
						<div class="absolute inset-y-0 left-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="#FFFFFF" class="ml-[12px] h-6 w-6">
								<path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd"/>
							</svg>
						</div>

						{{ form_widget(form.username, {
							'attr': {
								'class': 'text-gray-900 text-lg rounded-[30px] block w-full p-2 pl-14 pr-4 mb-8 h-12 leading-12', 'placeholder': 'Username'
							}
						}) }}
						{{ form_errors(form.username) }}
					</div>
				</div>

				<div class="w-[500px] bg-slate-300 rounded-[30px]">
					<div class="form-group mx-14 mb-6 relative">
						<div class="absolute inset-y-0 left-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFFFFF" class="ml-[12px] h-6 w-6">
								<path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" />
							</svg>
						</div>

						{{ form_widget(form.profilePic, {
							'attr': {
								'class': 'text-gray-900 text-lg rounded-[30px] block w-full p-2 pl-14 pr-4 mb-8 h-12 leading-12', 'placeholder': 'Profile Picture (URL)'
							}
						}) }}
						{{ form_errors(form.profilePic) }}
					</div>
				</div>


				<div class="form-group mx-14 mb-6 relative">
					<div class="absolute inset-y-0 left-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
						<svg xmlns="http://www.w3.org/2000/svg" fill="#FFFFFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" class="ml-[12px] h-6 w-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/>
						</svg>
					</div>

					{{ form_widget(form.email, {
						'attr': {
							'class': 'text-gray-900 text-lg rounded-[30px] block w-full p-2 pl-14 pr-4 mb-8 h-12 leading-12',
							'placeholder': 'Email'
						}
					}) }}
					{{ form_errors(form.email) }}
				</div>


				<div class="form-group mx-14 mb-6 relative">
					<div class="absolute inset-y-0 left-0 w-[45px] flex items-center pointer-events-none bg-black rounded-l-[30px]">
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="#FFFFFF" class="ml-[12px] h-6 w-6">
							<path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd"/>
						</svg>
					</div>

					{{ form_widget(form.password, {
						'attr': {
							'class': 'text-gray-900 text-lg rounded-[30px] block w-full p-2 pl-14 pr-4 mb-10 h-12 leading-12',
							'placeholder': 'Password'
						}
					}) }}
					{{ form_errors(form.password) }}
				</div>

				<div class="flex justify-center">
					<button type="submit" class="w-[180px] relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-[30px] group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
					<span class="w-[180px] relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-[30px] group-hover:bg-opacity-0 text-xl font-semibold">
						Update profile
					</span>
					</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
		<div class="place-items-center place-content-center">
			{{ include('user/_form.html.twig', {'button_label': 'Update profile'}) }}
		</div>

		<style>
			.wasili {
				display: grid;
				grid-template-columns: 288px auto;
			}
		</style>
	</div>
	{% endblock %}


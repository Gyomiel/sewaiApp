	{% block test %}

    <style>
        .chat-container {
            width: 500px;
            margin: 0 auto;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 8px;
            background-color: #f9f9f9;
            max-height: 400px;
            overflow-y: auto;
        }
        .chat-message {
            margin: 10px 0;
        }
        .chat-message.user {
            text-align: right;
            color: blue;
        }
        .chat-message.ai {
            text-align: left;
            color: green;
        }
        .chatbox-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-top: 10px;
        }
    </style>

    <h1>AI Chat</h1>

    <div id="chat-box" class="chat-container">
        {% for message in messages %}
            <div class="chat-message {{ message.role }}">
                <p>{{ message.content }}</p>
            </div>
        {% endfor %}
    </div>

		<form id="chat-form" method="POST">
			<label for="message">Your Message:</label>
			<input type="text" id="message" name="message" required>
			<input type="hidden" name="_method" value="POST">
			<button type="submit">Send</button>
		</form>


    <script>
        const chatBox = document.getElementById('chat-box');
        const form = document.getElementById('chat-form');
        const messageInput = document.getElementById('message');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const userMessage = messageInput.value.trim();
            if (userMessage === '') return;

            chatBox.innerHTML += `<div class="chat-message user"><p>${userMessage}</p></div>`;

            messageInput.value = '';
			const payload = {
				model: "Llama 3 8B Instruct",
				messages: [
					{
						role: "system",
						content: "You are a helpful assistant."
					},
					{
						role: "user",
						content: "Hello, how are you?"
					}
				],
				max_tokens: 150,
				temperature: 0.7
			};
            try {
                const response = await fetch('http://127.0.0.1:4891/v1/chat/completions', {
                    method: 'POST',
                    headers: {
						'Access-Control-Allow-Origin': '*',
                        'Content-Type': 'application/json'
                    },
					body: JSON.stringify(payload)
                });

                const data = await response.json();
				console.log(data);

                if (data.error) {
                    chatBox.innerHTML += `<div class="chat-message ai"><p>Error: ${data.error}</p></div>`;
                } else {
                    chatBox.innerHTML += `<div class="chat-message ai"><p>${data.response}</p></div>`;
                }

                chatBox.scrollTop = chatBox.scrollHeight;
            } catch (error) {
                chatBox.innerHTML += `<div class="chat-message ai"><p>Error: ${error.message}</p></div>`;
            }
        });
    </script>


{% extends 'base.html.twig' %}

{% block title %}sewai | sewAI Chat
{% endblock %}

{% block body %}
	<div class="dashboard-container wasili">
		{% block sidebar %}
			<div class="profile-sidebar-container flex flex-col w-72">
				<div class="px-3 py-5 flex justify-center items-center gap-4 border-b-4 border-[#BFC5FC] bg-[#F2F3FE]">
					<img class="w-16 h-16 rounded-full" src="{{ app.user.profilePic | default('imgs/userDefaultPfp.png') }}" alt="Profile Picture">
					<div class="font-medium text-black">
						<div class="text-xl font-semibold text-black">{{ app.user.username }}</div>
						<div class="text-lg text-slate-600 flex items-center gap-2">
							<span>{{ app.user.email }}</span>
						</div>
					</div>
				</div>

				<div id="default-sidebar" class=" w-72 h-[642px] bg-[#D8DCFD]" aria-label="Sidebar">
					<div class="h-full px-3 py-4 ml-2 mr-2">
						<ul class="space-y-2 font-medium">
							<li>
								<div class="flex items-center p-2 text-slate-800 rounded-lg">
									<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
									</svg>
									<span class="ms-3">Streak:
										{{ app.user.streakCount is not null ? app.user.streakCount ~ ' days!' : 'Start today!' }}</span>
								</div>
							</li>
							<li>
								<a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
									<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">Edit profile</span>
								</a>
							</li>
							<li>
								<a href="{{ path('viewJourneys') }}" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
									<svg class="flex-shrink-0 w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">My journeys</span>
								</a>
							</li>

							<li>
								<a href="{{ path('aiChatbox') }}" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
									<svg xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white">
										<path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">sewAI Chat</span>
								</a>
							</li>
							<li>
								<a href="#" class="flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
									<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">Notifications</span>
									<span class="inline-flex items-center justify-center w-3 h-3 p-3 ms-3 text-sm font-semibold text-white bg-[#AD49E1] rounded-full">1</span>
								</a>
							</li>
							<li>
								<a href="#" class="comingSoon flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#8E99F9] hover:text-white">
									<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">My sessions</span>
								</a>
							</li>
							<li>
								<a href="#" class="comingSoon flex items-center p-2 text-slate-800 rounded-lg hover:bg-[#4a4a4a] hover:text-white">
									<svg class="flex-shrink-0 w-5 h-5 text-black transition duration-75 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#FFF" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/>
									</svg>
									<span class="flex-1 ms-3 whitespace-nowrap">Community</span>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<style>
				.wasili {
					display: grid;
					grid-template-columns: 288px auto;
				}
				.comingSoon:hover {
					background-color: #4a4a4a;
					cursor: not-allowed;
				}
			</style>

		{% endblock %}

		{% block test %}
			<div class="flex flex-col justify-center items-center">
				<div class="wholeContainer w-[800px] bg-black shadow-md rounded-[30px]">
					<div class="flex flex-col h-[650px]">
						<div class="py-3 border-b">
							<div class="upperContainer flex justify-center items-center w-full">
								<h2 class="text-2xl text-center font-semibold text-white flex py-4">
									sewAI Chat
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="ml-3 h-6 w-6">
										<path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd"/>
									</svg>
								</h2>
							</div>
						</div>
						<div class="flex-1 p-3 overflow-y-auto flex flex-col space-y-2">
							{% for message in messages %}
								<div class="chat-message
																			{% if message.role == 'user' %}
																				self-end bg-blue-500 text-white
																			{% else %}
																				self-start bg-white text-white
																			{% endif %}
																			max-w-xs rounded-[30px] px-3 py-1.5 text-lg">
									<p class="p-2">{{ message.content }}</p>
								</div>
							{% endfor %}
						</div>

						<div class="inputBar px-3 py-2 border-t dark:border-zinc-700">
							<div class="flex gap-2">
								<form id="chat-form" method="POST" class="flex-1">
									<div class="relative flex items-center w-full inputContainer">
										<input type="text" id="message" name="message" placeholder="Type your message..." required class="p-2 rounded-[30px] dark:bg-zinc-700 text-lg w-full pr-16 flex justify-between"/>
										<button type="submit" class="sendButton absolute right-2 top-1/2 transform -translate-y-1/2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 transition duration-300 ease-in-out text-sm flex items-center justify-center">
											<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="sendSVG">
												<path d="M3.478 2.404a.75.75 0 0 0-.926.941l2.432 7.905H13.5a.75.75 0 0 1 0 1.5H4.984l-2.432 7.905a.75.75 0 0 0 .926.94 60.519 60.519 0 0 0 18.445-8.986.75.75 0 0 0 0-1.218A60.517 60.517 0 0 0 3.478 2.404Z"/>
											</svg>
										</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>

			<style>
			.sendButton{
				border-radius:30px
			}
			.sendSVG{
				height: 27px;
				width: 40px;
			}
			#message:focus{
				outline: none;
			}
				.inputBar{
					 position: sticky;
					 bottom: 0;
				}
				.inputContainer{
					justify-content: end;
				}
				.wholeContainer {
					width: 1400px;
					height: 650px;
					background-color: #F2F3FE;
					overflow-y: scroll;
					overflow: hidden;
				}

				.upperContainer {
					background-color: #2F3353;
					border-top-left-radius: 30px;
					border-top-right-radius: 30px;
				}

				.chat-message {
					display: inline-flex;
					align-items: center;
					justify-content: flex-start;
					width: auto;
					max-width: 70%;
					word-wrap: break-word;
					margin-bottom: 8px;

				}

				.chat-message.self-end {
					background-color: #8E99F9;
					font-size: 22px;
					padding-top: 0.5rem;
					padding-bottom: 0.5rem;
				}

				.chat-message.self-start {
					background-color: #5E66A6;
					font-size: 22px;
					padding-top: 0.5rem;
					padding-bottom: 0.5rem;
					width: fit-content;
				}
			</style>

		{% endblock %}

	</div>
{% endblock %}
